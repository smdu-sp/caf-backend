// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Permissao {
  DEV
  SUP
  ADM
  USR
}

model Usuario {
  id            String      @id @default(uuid())
  nome          String
  login         String      @unique
  email         String      @unique
  permissao     Permissao   @default(USR)
  status        Int         @default(1)
  rf            String      @unique
  vinculo       Int         @default(1)

  ultimologin   DateTime    @default(now())
  criadoEm      DateTime    @default(now())
  atualizadoEm  DateTime    @default(now()) @updatedAt

  unidade_id    String?
  unidade       Unidade?    @relation(fields: [unidade_id], references: [id])
  cargos        Cargo[]
  especies      Especie_Usuario[]

  @@map("usuarios")
}

model Especie {
  id          String  @id @default(uuid())
  nome        String  @unique
  usuarios    Especie_Usuario[]
}

model Especie_Usuario {
  inicio      DateTime
  termino     DateTime?

  usuario_id  String
  usuario     Usuario @relation(fields: [usuario_id], references: [id])
  especie_id  String
  especie     Especie @relation(fields: [especie_id], references: [id])

  @@id([especie_id, usuario_id])
  @@map("especies")
}

model Unidade {
  id     String  @id @default(uuid())
  nome   String  @unique
  sigla  String  @unique
  codigo String  @unique
  status Boolean @default(true)

  usuarios Usuario[]

  @@map("unidades")
}

enum TipoCargo {
  EFETIVO
  COMISSIONADO
}

model Cargo {
  id        String    @id @default(uuid())
  nome      String    @unique
  codigo    String    @unique
  tipo      TipoCargo @default(COMISSIONADO)
  status    Boolean   @default(true)

  usuarios  Usuario[]

  @@map("cargos")
}
